        <url-pattern>/profile.jsp/*</url-pattern>
        <role>USER</role>
    </constraint>
    <constraint>
        <url-pattern>/subscriptions.jsp/*</url-pattern>
        <role>USER</role>
    </constraint>
    <constraint>
        <url-pattern>/top_up_balance.jsp/*</url-pattern>
        <role>USER</role>
    </constraint>
    <constraint>
        <url-pattern>/updateUser.jsp/*</url-pattern>
        <role>USER</role>
    </constraint>

    <constraint>
        <url-pattern>/adminProfile.jsp/*</url-pattern>
        <role>ADMIN</role>
    </constraint>
    <constraint>
        <url-pattern>/updatePublication.jsp/*</url-pattern>
